<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.uniq.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.uniq.each do |error| %>
      <li><%= error %></li>  
    <% end %>
    </ul>
  </div>
<% end %>